line-purple = #663399

.header_container
  height 60px
  box-sizing border-box
  padding-left 10px
  padding-right 10px
  max-width 1200px
  margin 0 auto

.header
  display flex
  height 100%
  width 100%
  position relative
  padding-top 15px
  max-width 1200px
  margin 0 auto

.logo
  position relative
  width 100px
  border 2px solid rgba(255,255,255,0.9)
  height 35px
  line-height 35px
  text-align center
  font-weight 700
  color rgba(255,255,255,0.9)

.logo:hover
  cursor pointer

.countdown_container
  height 50px
  width 300px
  position absolute
  right 0

.countdown_list
  display flex
  justify-content flex-end

.countdown_item
  box-sizing border-box
  width 70px
  height 50px
  display flex
  flex-direction column

.countdown_item_top
  height 25px
  line-height 25px
  text-align center
  font-weight 900
  font-family 'Arvo'
  @media screen and (max-width: 600px)
    height 17px

.countdown_item_bot
  height 25px
  line-height 25px
  text-align center
  font-family 'Open Sans'
  @media screen and (max-width: 600px)
    height 17px

.countdown_Seconds
  @media screen and (max-width: 500px)
    display none

.countdown_title
  font-size 20px
  text-align right
  font-weight bold
  font-family 'Architects Daughter'
  color white
