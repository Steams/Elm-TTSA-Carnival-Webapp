@import "reset.css"
@import "Landing/hero.css"
@import "Landing/showcase.css"

dark-purple = #120035
lighter-purple = #130840
my-burgundy =#CB1D34
my-orange = #EF473A

my-gradient = -webkit-linear-gradient(-65deg, dark-purple 0%, lighter-purple 40%, dark-purple 80%)

my-rad-gradient = -webkit-radial-gradient(circle, dark-purple 0%, lighter-purple 40%, dark-purple 80%)

my-orange-gradient = -webkit-linear-gradient(-65deg, my-orange 0%, my-orange 40%, my-burgundy 80%)

grad = -webkit-linear-gradient(45deg, rgba(201, 128, 101, 0.3) 30%, rgba(0, 62, 17, 0.4) 80%)

body::before
  content ""
  background url('./ttsa_carnival_design.png')
  background-size cover
  opacity 1
  top 0
  left 0
  bottom 0
  right 0
  position absolute
  z-index -1
  filter brightness(0.5)

body
  position relative
  height 100%
  width 100%
  // background-color #140239
  // background-image my-rad-gradient
  background-size cover
  /* background-color black */
  color white
  font-family Arial

body::after
  content ""
  /* background url('./red-noise.png'), grad */
  background-image grad
  opacity 0.6
  top 0
  left 0
  bottom 0
  right 0
  position absolute
  z-index -1

li
  list-style none

.header_container
  height 60px
  box-sizing border-box
  padding-left 10px
  padding-right 10px
  // border 1px solid cyan

.header
  display flex
  height 100%
  justify-content space-between

.logo
  position relative
  width 100px
  margin-top 10px
  border 2px solid rgba(255,255,255,0.9)
  height 35px
  line-height 35px
  text-align center
  font-weight 700
  color rgba(255,255,255,0.9)

.logo:hover
  cursor pointer

.navbar
  display flex
  width 200px
  height 100%
  justify-content flex-end
  margin-right 100px
  // border 1px solid blue
  li
    margin-left 10px
    margin-right 10px
    font-weight 700
    font-size 14px
    line-height 60px
  li:hover
    cursor pointer
    transform scale(1.02)
    // border 1px solid purple
