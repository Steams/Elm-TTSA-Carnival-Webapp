.countdown_container
  height 50px
  width 300px
  position relative
  top 30px
  left 30px

.countdown_list
  display flex
  justify-content space-between

.countdown_item
  box-sizing border-box
  width 70px
  height 50px
  display flex
  flex-direction column

.countdown_item_top
  height 25px
  line-height 25px
  text-align center
  font-weight 900
  font-family 'Arvo'

.countdown_item_bot
  height 25px
  line-height 25px
  text-align center
  font-family 'Open Sans'

.landing_container
  display flex
  flex-direction column
  margin-top 10px
  height 100%
  width 100%

.landing_left
  display flex
  flex-direction column
  align-items center
  width 100%
  padding-left 30px

.slideshow_button
  flex-grow 1
  display flex
  justify-content center
  align-items center
  margin-left 10px
  margin-right 10px
  button
    height 40px
    width 40px
    background-color transparent
    border 2px solid rgba(255,255,255,0.3)
    color rgba(255,255,255,0.3)
    font-weight bold
    box-shadow -4px 4px 15px black
  button:hover
    border 2px solid rgba(255,255,255,0.8)
    color rgba(255,255,255,0.8)
    cursor pointer

.image_panel
  height 330px
  width 600px
  // background-color rgba(255,255,255,0.7)
  border 5px solid rgba(255,255,255,1)
  box-shadow -4px 4px 15px black

.slideshow_description_container
  height 200px
  width 600px
  padding 10px

.description_title
  font-size 20px
  width 200px
  margin-bottom 20px

.description_body
  width 400px
  margin-bottom 10px

.description_button
  button
    width 130px
    height 30px
    background-color transparent
    border 2px solid rgba(255,255,255,0.8)
    color white
  button:hover
    cursor pointer
    transform scale(1.01)

.landing_right
  position relative
  width 100%

.info_container
  position absolute
  height 250px
  width 450px
  bottom 0
  right 0
  padding 30px

.info_title
  font-size 20px
  width 200px
  margin-bottom 20px

.info_body
  width 300px
  margin-bottom 10px
  text-size 17px
