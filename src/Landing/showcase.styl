pastel-brown = #a58c8c
pastel-purple = #b356af
my-pink = #D63185
grad = -webkit-linear-gradient(45deg, #D63185 30%, #753EA4 80%)
button-grad = -webkit-linear-gradient(45deg, #E53689 30%, #E6398B 80%)
title-blue = #4c869e
//text = #525252
text = #1a1a1b
money = #24c157
my-grey = #565656
medium-break = 1190px

.showcase
  display flex
  flex-direction row
  max-width 1200px
  width 100%
  margin 20px 0
  margin-left 100px
  flex-wrap wrap
  align-items center
  @media screen and (max-width: medium-break)
    justify-content center
    margin 0 auto
    margin-top 20px
    max-width 800px


.slideshow_container
  display flex
  flex-direction column
  align-items center
  justify-content center
  height 630px
  max-width 490px
  width 100%
  border-radius 5px
  //background-color cyan
  background grad
  box-shadow 5px 5px 30px rgba(0,0,0,0.5)
  z-index 2
  @media screen and (max-width: medium-break)
    transform translate(0,0)
    height 90vh
    width 60vw
    border-radius 5px 5px 0px 0px
  @media screen and (max-width: 600px)
    max-height 450px
    width 100vw
    height 130vw

.package_title
  font-size 20px

.image_canvas
  background-color white
  height 80%
  width 90%
  border-radius 5px
  box-shadow 5px 5px 60px rgba(0,0,0,0.4)

.prompter
  display flex
  justify-content flex-end
  height 610px
  max-width 620px
  width 100%
  background-color white
  border 1px solid grey
  border-radius 10px
  transform translate(-50px,0)
  z-index 1
  position relative
  padding-right 30px
  @media screen and (max-width: medium-break)
    padding-right 0px
    transform translate(0,0)
    justify-content center
    max-width none
    width 100%
    margin 0
    height 650px
    border none
  @media screen and (max-width: 600px)
    height 100%
    border-radius 0px
    border none

.package_details
  position relative
  color black
  padding 20px
  width 400px
  @media screen and (max-width: medium-break)
    width 100%
    padding 20vw
    padding-top 30px
  @media screen and (max-width: 600px)
    padding 13vw
    padding-right 20px

.package_header
  margin-bottom 10px
  @media screen and (max-width: 600px)
    margin-top 40px

.package_title
  font-family 'Open Sans'
  margin-bottom 10px
  color my-pink
  font-weight bold
  @media screen and (max-width: medium-break)
    font-size 17px

.package_price
  font-family 'Lato'
  font-weight bold
  color text

.package_body
  position relative
  
.package_description
  font-family 'Open Sans'
  font-size 18px
  color text
  p
    margin-bottom 10px
  ul
    padding 0 15px
    margin-bottom 10px
    li
      list-style initial
      padding 3px

.package_footer
  box-sizing border-box
  height 50px
  width 100%
  display flex
  align-items center
  justify-content center
  transform translate(0,-7px)
  @media screen and (max-width: 600px)
    height 80px

fancyButton()
  position relative
  height 50px
  border-radius 40px
  border 1px solid rgba(255,255,255,0.3)
  color white
  font-size 20px
  font-family 'Arvo'
  outline none
  &:hover
    cursor pointer
    outline none
  &:active
    box-shadow 2px 5px 10px rgba(230, 57, 139, 0.3)
    outline none
    filter brightness(0.9)
  &::before
    content ""
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    background-color transparent
    border-radius 40px
    box-shadow 7px 5px 15px rgba(0,0,0,0.3)
    z-index -1
  &:active::before
    content ""
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    background-color transparent
    border-radius 40px
    box-shadow 2px 3px 5px rgba(0,0,0,0.4)
    z-index -1

.register_button
  fancyButton()
  width 250px
  background button-grad
  box-shadow 5px 10px 20px rgba(230, 57, 139, 0.3)

.register_cancel,.register_submit
  fancyButton()
  width 140px
  border-radius 5px
  &::before
    border-radius 5px
  &:active::before
    border-radius 5px

.register_cancel
  background-color grey
  margin-right 10px
.register_submit
  background-color #77dd77
  margin-left 10px

.slideshow_switcher
  display flex
  height 20px
  align-items center
  padding-bottom 10px

.dot
  height 10px
  width 10px
  background-color transparent
  border 1px solid white
  border-radius 20px
  margin 5px

.dot:hover
  cursor pointer
  width 12px
  height 12px

.dot.active
  background-color money
  border 1px solid money

.registration
  display flex
  flex-direction column
  flex-wrap wrap
  height 240px
  font-weight bold
  margin-top 20px
  @media screen and (max-width: 600px)
    height 450px

label
  display block
  color my-grey

input
  display block
  width 200px
  height 20px
  margin 10px 0
  border 1px solid title-blue
  padding 10px
  font-family 'Arvo'
  color my-grey

.wrapped
  margin-left 20px
  @media screen and (max-width: 600px)
    margin 0
    margin-top 10px

select
  height 42px
  width 100px
  background-color white
  border 1px solid title-blue
  outline none
  padding 5px
  margin 10px 0

slideshowButton()
  position absolute
  display flex
  justify-content center
  align-items center
  z-index 2
  button
    height 40px
    width 40px
    background-color transparent
    border 2px solid pastel-brown
    color pastel-brown
    font-weight bold
    outline none
  button:hover
    cursor pointer
  button:active
    border 2px solid pastel-brown
    background-color rgba(0,0,0,0.2)

.left_button
  top 10px
  right 60px
  slideshowButton()
  @media screen and (max-width: 600px)
    top 20px
    transform translate(-50%,0)
    left 40%

.right_button
  top 10px
  right 10px
  slideshowButton()
  @media screen and (max-width: 600px)
    top 20px
    transform translate(-50%,0)
    left 60%

.add_info
  margin-bottom 20px
  width 200px
  height 20px
  padding 10px
  margin 10px 0

.fine_print
  color my-grey
  font-size 13px