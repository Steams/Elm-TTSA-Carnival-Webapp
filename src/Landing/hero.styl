my-orange = #FEC152
my-grey = #A5A5A5
vibrant-orange = #FFB01E
text-grey = #d2d2d2
bg-orange = #ffa500
burnt-orange = #ff7d1b

.hero
  display flex flex-direction column
  height 250px
  max-width 600px
  width 100%
  margin-top 10vh
  padding-left 100px
  @media screen and (max-width: 1050px)
    width 100%
    margin-top 60px
    box-sizing border-box
  @media screen and (max-width: 600px)
    padding-left 10px
  
.hero_super_title
  display flex
  align-items flex-end
  flex-grow 2

.hero_super_title_text
  color vibrant-orange
  font-weight 500
  font-size 50px
  background-color white
  padding 10px
  padding-right 30px
  font-family 'Josefin Slab'
  @media screen and (max-width: 1050px)
    font-size 40px

.hero_title
  box-sizing border-box
  max-height 100px
  color my-grey
  font-weight bold
  font-size 70px
  background-color bg-orange
  padding-left 10px
  margin-bottom 10px
  @media screen and (max-width: 1050px)
    height 16vw
    min-height 70px

.hero_title_text
  position relative
  display block
  color white
  font-family 'Arvo'
  line-height  100px
  margin 0 auto
  @media screen and (max-width: 1050px)
    line-height 100px
  @media screen and (max-width: 600px)
    font-size 13vw
    line-height 70px

.hero_sub_title
  flex-grow 3
  font-weight bold
  font-size 20px
  line-height 35px
  color white

.highlight
  box-sizing border-box
  background-color vibrant-orange
  color black
  font-size 20px
  padding 5px
