my-orange = #FEC152
my-grey = #A5A5A5
vibrant-orange = #FFB01E
text-grey = #d2d2d2
bg-orange = #ffa500

.hero
  display flex
  flex-direction column
  height 250px
  max-width 600px
  width 100%
  margin-top 120px
  padding-left 100px

.hero_super_title
  display flex
  align-items flex-end
  flex-grow 2

.hero_super_title_text
  color vibrant-orange
  font-weight 500
  font-size 50px
  background-color white
  padding 10px
  padding-right 30px
  font-family 'Josefin Slab'

.hero_title
  position relative
  flex-grow 5
  color my-grey
  font-weight bold
  font-size 70px
  padding-top 10px

.hero_title_text
  color white
  background-color bg-orange
  padding 10px
  padding-right 30px
  font-family 'Arvo'

.hero_sub_title
  flex-grow 3
  font-weight bold
  font-size 20px
  line-height 35px
  color white

.highlight
  box-sizing border-box
  background-color vibrant-orange
  color black
  font-size 20px
  padding 5px