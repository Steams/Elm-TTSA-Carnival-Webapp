my-pink = #D63185
my-orange = #FEC152
my-grey = #A5A5A5
vibrant-orange = #FFB01E
text-grey = #d2d2d2
bg-orange = #ffa500
burnt-orange = #ff7d1b
line-purple = #663399
light-purple = #a063dc

.hero
  display flex flex-direction column
  height 250px
  max-width 600px
  width 100%
  margin-top 10vh
  padding-left 100px
  @media screen and (max-width: 1140px)
    width 100%
    margin-top 60px
    box-sizing border-box
  @media screen and (max-width: 600px)
    padding-left 10px
  
.hero_super_title
  display flex
  align-items flex-end
  flex-grow 2

.hero_super_title_text
  // color #a063dc
  color white
  font-weight 700
  font-size 50px
  // background-color white
  border-top 5px solid white
  padding 10px
  padding-right 30px
  font-family 'Arvo'
  @media screen and (max-width: 1140px)
    font-size 40px

.hero_title
  box-sizing border-box
  max-height 100px
  color my-grey
  font-weight bold
  font-size 70px
  padding-left 10px
  margin-bottom 10px
  border-bottom 3px solid line-purple
  @media screen and (max-width: 1140px)
    height 16vw
    min-height 70px
    font-size 65px

.hero_title_text
  position relative
  display block
  color white
  font-family 'Arvo'
  line-height  100px
  margin 0 auto
  @media screen and (max-width: 1140px)
    line-height 100px
  @media screen and (max-width: 600px)
    font-size 13vw
    line-height 70px

.hero_sub_title
  flex-grow 3
  font-weight bold
  font-size 20px
  line-height 35px
  color white

.highlight
  box-sizing border-box
  background-color my-pink
  color white
  font-size 20px
  padding 5px 10px
  font-family 'Architects Daughter'

.intro_text
  font-family 'Indie Flower', cursive